<Window x:Class="SalvarArquivoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalvarArquivoWpf" xmlns:viewmodels="clr-namespace:SalvarArquivoWpf.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:PessoaViewModel}"
        mc:Ignorable="d"
        Title="Salvar Dados em ARQUIVO" Height="450" Width="800" Background="#FF0E0B0B" Foreground="#FFF1E7E7">
    <Grid Background="#FF0B1333">
        <DockPanel Background="#FF0B1333" Height="400" Width="200" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="0,17,0,17">
            <WrapPanel Background="#FF2F73AF" Height="242" Width="192">
                <Button Width="180" Margin="5">
                    <Label Width="170">Lista de Pessoas Cadastradas</Label>
                </Button>
                <Button Width="180" Margin="5">
                    <Label Width="170">Ordernar por NOME</Label>
                </Button>
                <Button Width="180" Margin="5">
                    <Label Width="170">Ordenar por IDADE</Label>
                </Button>
                <Button Width="180" Margin="5" Click="Button_Click">
                    <Label Width="170">Cadastrar Nova Pessoa</Label>
                </Button>
                <Button Width="180" Margin="5">
                    <Label Width="170">Deletar Pessoa</Label>
                </Button>
                <Button  Name="sair" Width="180" Margin="5" Click="sair_Click">
                    <Label Width="170">Sair do Sistema</Label>
                </Button>
            </WrapPanel>
        </DockPanel>
        <Grid Margin="40,0,0,300" Grid.Column="1" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Name="txtBoxCadastro" Grid.Row="0" Margin="230,10,10,-25" Visibility="Visible" Grid.RowSpan="2">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Width" Value="40"/>
                    </Style>
                </StackPanel.Resources>
                <DockPanel Width="381" HorizontalAlignment="Left">
                    <TextBlock Text="Nome"/>
                    <TextBox HorizontalAlignment="Left" Text="{Binding Nome}" Width="300" />
                </DockPanel>
                <DockPanel Width="340" HorizontalAlignment="Left">
                    <TextBlock Text="Idade"/>
                    <TextBox HorizontalAlignment="Left" Text="{Binding Idade, ValidatesOnExceptions=True}" Width="50" />
                </DockPanel>
                <StackPanel Name="btnCadastro" Visibility="Visible" Background="White" Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="Height" Value="30"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button Name="btnSalvar" Content="Salvar" Command="{Binding Cadastrar}"/>
                    <Button Content="Cancelar"/>
                    <Button Content="Excluir" Foreground="#FFED1717"/>
                </StackPanel>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
